{
    "name": "matchme/theme",
    "description": "Modern mobile-first quiz and personality matching WordPress theme",
    "type": "wordpress-theme",
    "license": "proprietary",
    "authors": [
        {
            "name": "OtisTheDev"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "MatchMe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MatchMe\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpstan": "phpstan analyse src/ --level=8",
        "lint": [
            "@phpcs",
            "@phpstan"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
